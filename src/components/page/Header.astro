<style lang="scss">
  header {
    background: var(--accent-colour);
    color: white;
    font-family: var(--headline-font);
    text-transform: uppercase;
    padding-left: 50vw;
    padding-right: 50vw;
    margin-left: -50vw;
    margin-right: -50vw;

    nav {
      display: flex;
      justify-content: space-between;

      ul {
        list-style: none;
        display: flex;
      }

      ul.sections {
        li::after {
          content: "â€¢";
          padding-left: 0.5cqw;
          padding-right: 0.5cqw;
        }

        li:last-child::after {
          content: "";
          padding-left: 0;
          padding-right: 0;
        }
      }

      ul.icons {
        text-align: right;
      }
    }

    margin-bottom: var(--line-height);

    a {
      color: inherit;
      text-decoration: none;
      transition: 0.15s;
    }

    a:hover {
      opacity: 0.5;
    }
  }
</style>

