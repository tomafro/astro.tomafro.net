---
type SectionKey = "about" | "weeknotes" | "projects";
type Section = { name: string; href: string; key: SectionKey };

const sections: Section[] = [
  { name: "About", href: "/", key: "about" },
  { name: "Weeknotes", href: "/weeknotes", key: "weeknotes" },
  { name: "Projects", href: "/projects", key: "projects" },
];

export interface Props {
  section: SectionKey;
}

import Icon from "../Icon.astro";
---

<style lang="scss">
  header {
    background: var(--accent-colour);
    color: white;
    font-family: var(--headline-font);
    text-transform: uppercase;
    padding-left: 50vw;
    padding-right: 50vw;
    margin-left: -50vw;
    margin-right: -50vw;

    nav {
      display: flex;
      justify-content: space-between;

      ul {
        list-style: none;
        display: flex;
      }

      ul.sections {
        --item-padding: 0.25cqw;
        --separator-padding: 0.25cqw;
        margin-left: calc(var(--item-padding) * -1);

        li {
          display: flex;

          a {
            padding-left: var(--item-padding);
            padding-right: var(--item-padding);
          }
        }

        li::after {
          content: "â€¢";
          padding-left: var(--separator-padding);
          padding-right: var(--separator-padding);
        }

        li:last-child::after {
          content: "";
          padding-left: 0;
          padding-right: 0;
        }

        li[data-selected] a {
          color: var(--accent-colour);
          background: white;
        }
      }

      ul.icons {
        text-align: right;
        font-size: 1.4em;
      }
    }

    margin-bottom: var(--line-height);

    a {
      color: inherit;
      text-decoration: none;
      transition: 0.15s;
    }

    a:hover {
      opacity: 0.5;
    }
  }
</style>

<header>
  <nav>
    <ul class="sections">
      {
        sections.map(({ name, href, key }) => {
          return (
            <li data-selected={key == Astro.props.section}>
              <a href={href}>{name}</a>
            </li>
          );
        })
      }
    </ul>
    <ul class="icons">
      <li>
        <a href="https://hachyderm.io/@tomafro"><Icon name="mastodon" /></a>
      </li>
      <li>
        <a href="https://instagram.com/tomafro"><Icon name="instagram" /></a>
      </li>
      <li>
        <a href="https://github.com/tomafro"><Icon name="github" /></a>
      </li>
    </ul>
  </nav>
</header>
