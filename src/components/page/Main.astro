---
const { maxWidth, gutterSize } = Astro.props;
---

<style define:vars={{ maxWidth, gutterSize }} lang="scss">
  main {
    container: content / inline-size;

    > div.bounds {
      max-width: var(--maxWidth);
      padding-left: var(--gutterSize);
      padding-right: var(--gutterSize);
      margin: 0 auto;
    }

    :global(article) :global(ul) {
      list-style: none inside;

      :global(li p:first-child::before) {
        content: "â€” ";
      }

      @container content (min-width: 52rem) {
        list-style: disc outside;

        :global(li p:first-child::before) {
          display: none;
        }
      }
    }
  }
</style>
<main>
  <div class="bounds">
    <slot />
  </div>
</main>
