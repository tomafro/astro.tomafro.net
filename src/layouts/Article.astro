---
import MainLayout from "./MainLayout.astro";
import Article from "@components/Article.astro";

export interface Props {
  title: string;
  date: Date;
}

const article = Astro.props.frontmatter || Astro.props;
const { title } = article;
---

<MainLayout title={title}>
  <Article article={article}>
    <slot />
  </Article>
</MainLayout>
