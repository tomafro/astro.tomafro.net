---
import Article from "../../layouts/Article.astro";
import { getCollection } from "astro:content";
export async function getStaticPaths() {
  const weeknotes = await getCollection("weeknotes");
  return weeknotes.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, date } = entry.data;
const week = parseInt(entry.slug);
const titleWithWeek = `Week ${week}: ${title}`;
---

<Article title={titleWithWeek} date={date}>
  <Content />
</Article>
